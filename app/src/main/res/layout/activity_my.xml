        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Score: 0"
        android:id="@+id/scoreView"
        android:textColor="#ffffffff"
        android:layout_alignBaseline="@+id/cardSwitch"
        android:layout_alignBottom="@+id/cardSwitch"
        android:layout_toRightOf="@+id/redrawButton"
        android:layout_toEndOf="@+id/redrawButton"
